{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_HOOK_EVENT=SessionStart python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/codepilot-hook.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_HOOK_EVENT=PostToolUse python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/codepilot-hook.py\"",
            "timeout": 3
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_HOOK_EVENT=Stop python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/codepilot-hook.py\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
